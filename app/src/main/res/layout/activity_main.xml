<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/green1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/agvcar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="AGV控制客户端"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        />
</LinearLayout>

<!-- ************************************************************* -->
<!-- ************************************************************* -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:id="@+id/singleCarControl"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单车端"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/ed_ip"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:hint="192.168.0.107"
            android:text="192.168.1.107"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/ed_port"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:hint="8700"
            android:text="8700"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Space
            android:layout_width="143dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接AGV"
            android:textSize="15sp"
            android:shadowColor="@color/blue1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Space
            android:layout_width="85dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bn_buildPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激光建图"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="27dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bn_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激光导航"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>
<!-- ************************************************************* -->
<!-- ************************************************************* -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:id="@+id/multiCarControl"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多车端"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/ed_ip3"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:hint="192.168.0.112"
            android:text="192.168.0.112"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <Space
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/ed_port3"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:hint="8100"
            android:text="8100"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Space
            android:layout_width="143dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bn_connect3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接PC端"
            android:textSize="15sp"
            android:shadowColor="@color/blue1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Space
            android:layout_width="143dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bn_multiRobots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多车导航"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <Space
        android:layout_width="245dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/bn_changeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->多车导航"
        android:textSize="15sp"
        />
</LinearLayout>
</LinearLayout>